{
  "manifest_version": 3,
  "name": "ListingsAI - Session Capture & Cross-Posting",
  "version": "2.0.1",
  "description": "Captures your marketplace login sessions for automated cross-posting. Works with Poshmark, Mercari, eBay, and Flyp.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "notifications",
    "cookies"
  ],
  "host_permissions": [
    "https://ai-resell-agent-production.up.railway.app/*",
    "http://localhost:3000/*",
    "https://poshmark.com/*",
    "https://www.poshmark.com/*",
    "https://mercari.com/*",
    "https://www.mercari.com/*",
    "https://ebay.com/*",
    "https://www.ebay.com/*",
    "https://tools.joinflyp.com/*",
    "https://joinflyp.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://ai-resell-agent-production.up.railway.app/*",
        "http://localhost:3000/*"
      ],
      "js": ["content-scripts/webapp.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://poshmark.com/*", "https://www.poshmark.com/*"],
      "js": ["session-capture.js", "content-scripts/poshmark.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://mercari.com/*", "https://www.mercari.com/*"],
      "js": ["session-capture.js", "content-scripts/mercari.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://ebay.com/*", "https://www.ebay.com/*"],
      "js": ["session-capture.js", "content-scripts/ebay.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "externally_connectable": {
    "matches": [
      "https://ai-resell-agent-production.up.railway.app/*",
      "http://localhost:3000/*"
    ]
  }
}
