# =====================================================
# AI RESELL AGENT - ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or .env files to version control

# =====================================================
# REQUIRED - APPLICATION
# =====================================================

# Site URL (Change to your production URL)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Application Name
NEXT_PUBLIC_APP_NAME=AI Resell Agent

# API URL for automation worker
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# =====================================================
# REQUIRED - SUPABASE
# =====================================================

# Supabase Project URL (Get from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (Public - safe to expose)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (SECRET - keep private, server-side only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# REQUIRED - AI SERVICES
# =====================================================

# OpenRouter API Key (for AI listing generation)
# Get your key at: https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key-here

# =====================================================
# REQUIRED - REDIS (for job queue)
# =====================================================

# Redis URL for Bull queue (automation jobs)
# Local: redis://127.0.0.1:6379
# Upstash: redis://:password@host:port
REDIS_URL=redis://127.0.0.1:6379

# =====================================================
# OPTIONAL - CHROME EXTENSION
# =====================================================

# Chrome Extension ID (after publishing to Chrome Web Store)
# Leave empty for development
NEXT_PUBLIC_EXTENSION_ID=

# =====================================================
# OPTIONAL - MARKETPLACE API KEYS
# =====================================================
# Note: Most marketplace integrations use browser automation
# These are only needed if using official APIs

# eBay API Credentials (if using eBay API directly)
EBAY_APP_ID=
EBAY_CERT_ID=
EBAY_DEV_ID=
EBAY_REDIRECT_URI=

# Poshmark API (if available)
POSHMARK_API_KEY=

# Mercari API (if available)
MERCARI_API_KEY=

# =====================================================
# OPTIONAL - MONITORING & ANALYTICS
# =====================================================

# Sentry DSN for error tracking (recommended for production)
NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# =====================================================
# OPTIONAL - EMAIL & NOTIFICATIONS
# =====================================================

# SendGrid API Key (for transactional emails)
SENDGRID_API_KEY=

# Resend API Key (alternative to SendGrid)
RESEND_API_KEY=

# =====================================================
# OPTIONAL - STORAGE & CDN
# =====================================================

# Cloudflare R2 or AWS S3 (if not using Supabase Storage)
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_REGION=

# =====================================================
# OPTIONAL - RATE LIMITING
# =====================================================

# Upstash Redis for rate limiting (separate from job queue)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# =====================================================
# DEVELOPMENT ONLY
# =====================================================

# Node environment (development, production, test)
NODE_ENV=development

# Debug mode (enables verbose logging)
DEBUG=false

# Skip SSL verification (development only, never in production)
NODE_TLS_REJECT_UNAUTHORIZED=1

# =====================================================
# SECURITY NOTES
# =====================================================
# 
# 1. NEVER commit this file with real values
# 2. Use strong, unique passwords and API keys
# 3. Rotate keys regularly (every 90 days minimum)
# 4. Use environment-specific keys (dev vs prod)
# 5. Store production secrets in secure vault (Vercel, AWS Secrets Manager, etc.)
# 6. Enable IP whitelisting where possible
# 7. Monitor API usage for anomalies
# 
# =====================================================
